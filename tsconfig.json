{
	"compileOnSave": true,
	"compilerOptions": {
		"rootDir": ".",
		"baseUrl": ".",
		"target": "esnext",
		"module": "ES2022",
		"moduleResolution": "Node",
		"noEmit": true,
		"outDir": "scripts/",
		"noUnusedLocals": true,
		"strict": true,
		"alwaysStrict": true,
		"experimentalDecorators": true,
		"forceConsistentCasingInFileNames": true,
		"lib": ["ESNext"],
	},
	"include": [
		"./**/*.ts",
		"./**/*.d.ts",
	],
	"exclude": [
		"node_modules/**/*",
		"scripts_files/**/*",
	]
}